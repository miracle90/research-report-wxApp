.page {
  padding: 30rpx;
}

.form-item {
  border-bottom: 2rpx solid#EBEBEB;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
}

.form-item .label {
  flex-shrink: 0;
}

.form-item input {
  flex: 1;
  text-align: right;
  /* z-index: -1; */
}

.form-item .unit {
  flex-shrink: 0;
  width: 80rpx;
  text-align: right;
}

.tips {
  margin-top: 30rpx;
  font-family: SourceHanSansCN-Regular;
  font-size: 12px;
  color: #F4AA4E;
}

.introduction {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 36rpx;
  padding: 0 40rpx;
  height: 90rpx;
  background: #FFF6E6;
  border-radius: 8rpx;
}

.introduction text {
  font-family: SourceHanSansCN-Medium;
  font-size: 14px;
  color: #8C4E2C;
}

.introduction image {
  width: 14rpx;
  height: 24rpx;
}

.calc-btn {
  margin-top: 40rpx;
  height: 96rpx;
  line-height: 96rpx;
  background: #2589FF;
  border-radius: 8rpx;
  text-align: center;
  font-family: SourceHanSansCN-Medium;
  font-size: 16px;
  color: #FFFFFF;
}

.result-wrap {
  display: flex;
  margin-top: 50rpx;
}

.result-wrap text {
  flex: 1;
  font-family: SourceHanSansCN-Medium;
  font-size: 16px;
  color: #F5A623;
}

.introduction-dialog {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  /* display: flex; */
  /* justify-content: center; */
  background: rgba(20, 20, 20, 0.91);
}

.content-wrap {
  position: absolute;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin-top: 60rpx;
  padding-bottom: 30rpx;
  width: 700rpx;
  /* height: 486rpx; */
  background-image: linear-gradient(270deg, #356CFE 0%, #2589FF 100%);
  border-radius: 8rpx;
}

.close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 30rpx;
  height: 28rpx;
}

.title {
  margin: 60rpx auto 36rpx;
}
.title text {
  margin: 0 28rpx;
  font-family: SourceHanSansCN-Medium;
  font-size: 16px;
  color: #FFFFFF;
}

.title image {
  width: 54rpx;
  height: 20rpx;
}

.desc {
  padding: 14rpx 24rpx 60rpx 24rpx;
  width: 640rpx;
  /* height: 310rpx; */
  background: #fff;
  font-family: SourceHanSansCN-Regular;
  font-size: 14px;
  color: #333333;
  letter-spacing: 0.41px;
  line-height: 50rpx;
  box-sizing: border-box;
}