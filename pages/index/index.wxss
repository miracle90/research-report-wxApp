/**index.wxss**/
.search-wrapper {
  background: #356CFE;
  width: 100%;
}

.input-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 16rpx 18rpx 18rpx;
  padding: 0 0 0 22rpx;
  height: 92rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}

.input-icon {
  margin-right: 8rpx;
  width: 32rpx;
  height: 32rpx;
}

.input-wrapper input {
  flex: 1;
  margin-right: 18rpx;
  font-family: PingFangSC-Regular;
  font-size: 15px;
}

.search-btn {
  padding: 0;
  width: 176rpx;
  height: 92rpx;
  line-height: 92rpx;
  background: #CBE1FF;
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #3074FE;
  letter-spacing: 1.46rpx;
  text-align: center;
  border-radius: 0 8px 8px 0;
  box-sizing: border-box;
}

button {
  width: 176rpx !important;
}

.hot-wrapper {
  /* display: flex; */
  margin: 13rpx 42rpx 0;
}

.hot-wrapper .hot-icon {
  display: inline-block;
  width: 28rpx;
  height: 38rpx;
}
.hot-wrapper .name {
  display: inline-block;
  margin-left: 15rpx;
  margin-right: 45rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #FFFFFF;
}
.hot-wrapper .label {
  display: inline-block;
  margin: 0 20rpx 32rpx 0;
  padding: 0 10rpx;
  height: 38rpx;
  line-height: 38rpx;
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #FFFFFF;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
}

.category-wrapper {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}

.category-item {
  position: relative;
  margin-bottom: 20rpx;
  padding-top: 8rpx;
  padding-left: 38rpx;
  width: 332rpx;
  height: 106rpx;
  box-sizing: border-box;
}

.category-item .name {
  font-family: SourceHanSansCN-Bold;
  font-size: 16px;
  color: #FFFFFF;
}

.category-item .ename {
  opacity: 0.2;
  font-family: SourceHanSansCN-Regular;
  font-size: 12px;
  color: #FFFFFF;
}

.category-item image {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
}
